<idea-plugin version="2">
  <id>com.tdp</id>
  <name>TDP plugin</name>
  <version>1.5</version>
  <vendor url="http://www.epam.com">Epam</vendor>

  <change-notes></change-notes>
  <description><![CDATA[
      The plugin for a TDP project.
    ]]></description>

  <change-notes><![CDATA[
    ]]>
  </change-notes>

  <idea-version since-build="143.0"/>

  <extensions defaultExtensionNs="com.intellij">
	<projectViewNodeDecorator implementation="com.tdp.decorator.ModuleDecorator"/>
    <projectTemplatesFactory implementation="com.tdp.workspace.generator.project.TDPTemplateFactory"/>
  </extensions>

  <actions>
    <action id="BuildTpdProject" class="com.tdp.workspace.generator.ChooserBaseModules" text="TDP project">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>

</idea-plugin>